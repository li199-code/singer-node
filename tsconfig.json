{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es2018",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
